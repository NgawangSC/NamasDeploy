# Server Configuration
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://www.namasbhutan.com

# Production API Configuration
REACT_APP_API_URL=https://namasdeploy-production.up.railway.app/api
REACT_APP_SERVER_URL=https://namasdeploy-production.up.railway.app

# Development fallback (these will be used when the above aren't set)
# REACT_APP_API_URL=http://localhost:5000/api
# REACT_APP_SERVER_URL=http://localhost:5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/namas-architecture

# Cloudinary Configuration (for image storage)
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=demo
CLOUDINARY_API_KEY=demo
CLOUDINARY_API_SECRET=demo

# JWT Configuration
JWT_SECRET=namas-architecture-prod-secret-key-2024
JWT_EXPIRES_IN=30d

# Admin Authentication
ADMIN_EMAIL=admin@namasarchitecture.com
ADMIN_PASSWORD=admin123

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Settings
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=10

# Logging
LOG_LEVEL=info
LOG_FILE=logs/server.log

# CORS Configuration
ALLOWED_ORIGINS=https://www.namasbhutan.com,https://namasbhutan.com,http://localhost:3000
